{#
/**
 * @file
 *
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
<article{{ attributes.addClass('commerce-product--full') }}>
    {# в оригинале в <article{{ attributes }}> было только это:
    {{- product|without('variation_attributes') -}}
    #}
    <div>{{ product.variation_field_product_variation_img }}</div>
    <div class="variations-wrapper">
        <h1>{{ product.variation_title[0]['#title']['#context']['value'] }}</h1>
        {% if product.variations[1] is defined %} {# выведем варианты товара только в том случае, если их более одного#}
            {{ product.variations }}
        {% endif %}
    </div>
    {# Если поле "Файлы" заполнено - отрендерим его #}
    {% if product.field_download|render %}
        <div class="row">
            <div class="col-sm-5">

            </div>
            <div class="col-sm-7">
                {{ product.field_download }}
            </div>
        </div>
    {% endif %}
    {# Если поле "Смотри также" заполнено - отрендерим его #}
    {% if product.field_product_reference|render %}
        <div class="row">
            <h4>Смотри также</h4>
            {{ product.field_product_reference }}
        </div>
    {% endif %}

</article>